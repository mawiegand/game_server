<tr>
  <td><%= link_to "#{event.id}", event_event_path(event) %></td>
  <td><%= event.executed_at %></td>
  <td><%= event.locked_at %></td>
  <td><%= event.locked_by %></td>
  <td><%= event.blocked %></td>
  <td><%= event.blocked_by %></td>
<% unless battle.nil? %>
  <td><%= link_to "#{battle.id}", military_battle_path(battle) %></td>
  <td><%= battle.battle_rounds_count %></td>
  <td><%= battle.next_round_at %></td>
<% else %>
  <td colspan="3">No battle associated.</td>
<% end %>
</tr>