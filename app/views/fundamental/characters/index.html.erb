<h1>Listing fundamental_characters</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Identifier</th>
    <th>Premium</th>
    <th>Name</th>
    <th>Login</th>
    <th>Lvel</th>
    <th>Skill</th>
    <th>Fights</th>
    <th>Health</th>
    <th>Locked</th>
    <th>Base</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fundamental_characters.each do |fundamental_character| %>
  <tr>
    <td><%= fundamental_character.id %></td>
    <td><%= link_to fundamental_character.identifier, "/identity_provider/identities/#{fundamental_character.identifier}" %></td>
    <td><%= fundamental_character.premium_account %></td>
    <td><%= fundamental_character.name %> 
        <%if !fundamental_character.alliance_tag.blank? %>
          | <%= fundamental_character.alliance_tag %>
        <%end%></td>
    <td><% if !fundamental_character.last_login_at.nil? %>
          <%= time_ago_in_words(fundamental_character.last_login_at) %> ago (#<%= fundamental_character.login_count %>)
        <%else%>
          never
        <%end%></td>
    <td><%= fundamental_character.lvel %> (<%= fundamental_character.exp %>)</td>
    <td><%= fundamental_character.skill_points %></td>
    <td><%= fundamental_character.wins %>W / 
        <%= fundamental_character.losses %>L</td>
    <td><%= fundamental_character.health_present %> / <%= fundamental_character.health_max %></td>
    <td><%= fundamental_character.locked %> <%= fundamental_character.locked_by %></td>
    <td><%= fundamental_character.base_location_id %></td>
    <td><%= link_to 'Show', fundamental_character %></td>
    <td><%= link_to 'Edit', edit_fundamental_character_path(fundamental_character) %></td>
    <td><%= link_to 'Destroy', fundamental_character, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

