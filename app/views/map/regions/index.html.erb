<h1>Listing map_regions</h1>

<%= if (@paginate) 
  will_paginate @map_regions 
end %>


<table>
  <tr>
    <th>Node</th>
    <th>Name</th>
    <th>Settlement Type and Size</th>
    <th>Owner</th>
    <th>Alliance</th>
    <th>Count outposts</th>
    <th>Count settlements</th>
    <th>Terrain</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @map_regions.each do |map_region| %>
  <tr>
    <td><%= map_region.node_id %></td>
    <td><%= map_region.name %></td>
    <td><%= "#{GameRules::Rules.the_rules.settlement_types[map_region.settlement_type_id][:name][:en_US]} T#{map_region.settlement_type_id}" unless map_region.settlement_type_id.blank? %> <%= "L#{map_region.settlement_level}" unless map_region.settlement_level.nil? %></td>
    <td><%= map_region.owner_name %> <%= "(#{ map_region.owner_id})"  unless map_region.owner_id.blank? %></td>
    <td><%= map_region.alliance_tag %> <%="(#{ map_region.alliance_id})"  unless map_region.alliance_id.blank? %></td>
    <td><%= map_region.count_outposts %></td>
    <td><%= map_region.count_settlements %></td>
    <td><%= map_region.terrain_id %></td>
    <td><%= link_to 'Show', map_region %></td>
    <td><%= link_to 'Edit', edit_map_region_path(map_region) %></td>
    <td><%= link_to 'Destroy', map_region, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Region', new_map_region_path %>


<%= if (@paginate) 
  will_paginate @map_regions 
end %>
