  if attribute.start_with? 'unit_' %>
    <td><%= value %></td>
<%end
end%>
    <td><%= link_to 'Show', military_battle_participant_result %></td>
    <td><%= link_to 'Edit', edit_military_battle_participant_result_path(military_battle_participant_result) %></td>
    <td><%= link_to 'Destroy', military_battle_participant_result, confirm: 'Are you sure?', method: :delete %></td>
