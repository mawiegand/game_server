<% @military_battle_participant_results.each do |military_battle_participant_result| %>
  <tr>
    <td><%= military_battle_participant_result.battle_id %></td>
    <td><%= military_battle_participant_result.round_id %></td>
    <td><%= military_battle_participant_result.army_id %></td>
    <td><%= military_battle_participant_result.battle_faction_result_id %></td>
    <td><%= military_battle_participant_result.retreat_tried %></td>
    <td><%= military_battle_participant_result.retreat_succeeded %></td>
    <td><%= military_battle_participant_result.kills %></td>
    <td><%= military_battle_participant_result.experience_gained %></td>
