<h1>Listing settlement_slots</h1>

<%= if (@paginate) 
  will_paginate @settlement_slots 
end %>

<table>
  <tr>
    <th>Settlement</th>
    <th>Slot num</th>
    <th>Type</th>
    <th>Max level</th>
    <th>Building</th>
    <th>Level</th>
    <th>Construction</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @settlement_slots.each do |settlement_slot| %>
  <tr>
    <td><%= settlement_slot.settlement_id %></td>
    <td><%= settlement_slot.slot_num %></td>
    <td><%= settlement_slot.type %></td>
    <td><%= settlement_slot.max_level %></td>
    <td><%= settlement_slot.building_id %></td>
    <td><%= settlement_slot.level %></td>
    <td><%= settlement_slot.construction_id %></td>
    <td><%= link_to 'Show', settlement_slot %></td>
    <td><%= link_to 'Edit', edit_settlement_slot_path(settlement_slot) %></td>
    <td><%= link_to 'Destroy', settlement_slot, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= if (@paginate) 
  will_paginate @settlement_slots 
end %>

<br />

<%= link_to 'New Slot', new_settlement_slot_path %>
