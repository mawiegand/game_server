<h1>Listing shop_purchases</h1>

<table>
  <tr>
    <th>Offer type</th>
    <th>Offer</th>
    <th>Redeemed at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shop_purchases.each do |shop_purchase| %>
  <tr>
    <td><%= shop_purchase.offer_type %></td>
    <td><%= shop_purchase.offer_id %></td>
    <td><%= shop_purchase.redeemed_at %></td>
    <td><%= link_to 'Show', shop_purchase %></td>
    <td><%= link_to 'Edit', edit_shop_purchase_path(shop_purchase) %></td>
    <td><%= link_to 'Destroy', shop_purchase, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

