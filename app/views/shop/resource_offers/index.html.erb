<% @shop_resource_offers.each do |shop_resource_offer| %>
  <tr>
    <td><%= shop_resource_offer.title %></td>
    <td><%= shop_resource_offer.price %></td>
    <td><%= shop_resource_offer.amount %></td>
    <td><%= shop_resource_offer.resource_id %></td>
    <td><%= shop_resource_offer.started_at %></td>
    <td><%= shop_resource_offer.ends_at %></td>
    <td><%= link_to 'Show', shop_resource_offer %></td>
    <td><%= link_to 'Edit', edit_shop_resource_offer_path(shop_resource_offer) %></td>
