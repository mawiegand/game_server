<h1>Listing tutorial_quests</h1>

<%= if (@paginate) 
  will_paginate @tutorial_quests 
end %>

<table>
  <tr>
    <th>State</th>
    <th>Quest</th>
    <th>Status</th>
    <th>Created at</th>
    <th>Displayed at</th>
    <th>Finished at</th>
    <th>Closed at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tutorial_quests.each do |tutorial_quest| %>
  <tr>
    <td><%= tutorial_quest.state_id %></td>
    <td><%= tutorial_quest.quest_id %></td>
    <td><%= Tutorial::Quest::STATES[tutorial_quest.status] %></td>
    <td><%= tutorial_quest.created_at %></td>
    <td><%= tutorial_quest.displayed_at %></td>
    <td><%= tutorial_quest.finished_at %></td>
    <td><%= tutorial_quest.closed_at %></td>
    <td><%= link_to 'Show', tutorial_quest %></td>
    <td><%= link_to 'Edit', edit_tutorial_quest_path(tutorial_quest) %></td>
    <td><%= link_to 'Destroy', tutorial_quest, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= if (@paginate) 
  will_paginate @tutorial_quests 
end %>

