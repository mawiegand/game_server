<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Rules SYSTEM "../rules.dtd">

<Building id="building_artillery_tower" group="military" category="building_category_fortress_tower" buyable="true" destructable="true">  
  <Name lang="de_DE">Turm der Ballistik</Name>
  <Name lang="en_US">Ballistic Tower</Name>
  <Description lang="de_DE">
    <p>Schulungszentrum für alle Distanzkämpfer.</p>
  </Description>
  <Description lang="en_US">
    <p>Trains artillery.</p>
  </Description>
  <Flavour lang="en_US">
    <p>Everything which can be shoot flies around here. So, watch yourself and duck in time! Training of long-range combat fighter is in progress.</p>
  </Flavour>
    <Flavour lang="de_DE">
    <p>Hier fliegt alles was man werfen oder abschießen kann! Kopf runter! Die Ausblidung der Fernkämpfer ist in vollem Gang.</p>
  </Flavour>
  <Requirement id="building_fortress_fortification" min_level="2" />  
  <Cost id="resource_stone" round="true">5*FLOOR(POW(LEVEL,3))</Cost>  
  <Cost id="resource_wood" round="true">3*FLOOR(POW(LEVEL,3))</Cost>    
  <Cost id="resource_furs" round="true">2*FLOOR(POW(LEVEL,3))</Cost>
  <ProductionTime shortenable="true">2*(LEVEL+1)+10</ProductionTime>   
  <Abilities> <!-- just for grouping -->
    <UnlockQueue  queue="queue_artillery" />
    <SpeedupQueue queue="queue_artillery" domain="settlement">POW(MAX(LEVEL-1,0),2.0)*0.10</SpeedupQueue>
  </Abilities>  
</Building>
