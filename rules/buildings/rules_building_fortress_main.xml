<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Rules SYSTEM "../rules.dtd">

<Building id="building_fortress_fortification" group="military" category="building_category_fortress_fortification" buyable="true" destructable="false" demolishable="false">  
  <Name lang="de_DE">Festungsanlagen</Name>
  <Name lang="en_US">Fortifications</Name>
  <Description lang="de_DE">
    <p>Hauptgebäude, Befestigungs- und Verteidigungsanlagen der Festung. Beschleunigt alle anderen Gebäudeausbauten und erhöht die Wehrhaftigkeit der Festung.</p>
  </Description>
  <Description lang="en_US">
    <p>Main Building and Fortifications of the fortress. Speeds-up all other constructions and increases the defense abilities.</p>
  </Description>
  <Cost id="resource_stone" round="true">LEVEL*100</Cost>  
  <Cost id="resource_wood" round="true">LEVEL*10</Cost>    
  <ProductionTime shortenable="false">2*(LEVEL+1)+10</ProductionTime>     
  <Abilities> <!-- just for grouping -->
    <UnlockGarrison level="1" />
    <CommandPoints>1+(MAX(LEVEL-4,0)*1-MAX(LEVEL-5,0)*1)+(MAX(LEVEL-9,0)*1-MAX(LEVEL-10,0)*1)</CommandPoints><!-- one for level 1, +1 for level 5, +1 for level 10-->
    <UnlockQueue  queue="queue_buildings" />
    <SpeedupQueue queue="queue_buildings" domain="settlement">POW(MAX(LEVEL-1,0),2.0)*0.10</SpeedupQueue>
  </Abilities>
</Building>