<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Rules SYSTEM "rules.dtd">

<BuildingCategories>
  <BuildingCategory id="building_category_fortress_main">
    <Name>Fortification</Name>
    <Name lang="de_DE">Festungsanlagen</Name>
    <Description lang="de_DE">
      <p>Allgemeine Verbesserungen, die in Festungen gebaut werden können.</p> 
    </Description>
    <Description lang="en_US">
      <p>Improvements to be build in fortresses.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_fortress_tower">
    <Name>Towers</Name>
    <Name lang="de_DE">Türme</Name>
    <Description lang="de_DE">
      <p>In Türmen untergebrachte militärische Verbesserungen von Festungen.</p> 
    </Description>
    <Description lang="en_US">
      <p>Towers that extend the military abilities of fortresses.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_fortress_special">
    <Name>Advanced Fortress Buildings</Name>
    <Name lang="de_DE">Spezielle Festungsgebäude</Name>
    <Description lang="de_DE">
      <p>Spezialgebäude von Festungen.</p> 
    </Description>
    <Description lang="en_US">
      <p>Towers that extend the military abilities of fortresses.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_wall">
    <Name>Defensive Barricade </Name>
    <Name lang="de_DE">Verteidigungswall</Name>
    <Description lang="de_DE">
      <p>Grundlegende Verteidigungseinrichtung einer jeden Siedlung.</p> 
    </Description>
    <Description lang="en_US">
      <p>Fundamental defensive building of any settlement.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_large_building">
    <Name>Large Buildings</Name>
    <Name lang="de_DE">Große Gebäude</Name>
    <Description lang="de_DE">
      <p>Wichtige Gebäude, die eine große Grundfläche benötigen.</p> 
    </Description>
    <Description lang="en_US">
      <p>Advanced buildings that must be built on a large building slot.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_small_building">
    <Name>Standard Buildings</Name>
    <Name lang="de_DE">Einfache Gebäude</Name>
    <Description lang="de_DE">
      <p>Grundlegende Gebäude, die überall, auf großen und kleinen Bauplätzen, gebaut werden können.</p> 
    </Description>
    <Description lang="en_US">
      <p>Fundamental buildings of any settlement that can be built on large as well as small building slots.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_special_building">
    <Name>Special Buildings</Name>
    <Name lang="de_DE">Spezialgebäude</Name>
    <Description lang="de_DE">
      <p>Spezielle Gebäude die nur auf kleinen Bauplätzen gebaut werden können.</p> 
    </Description>
    <Description lang="en_US">
      <p>Special buildings that can only be built on small building slots.</p>
    </Description>
  </BuildingCategory>
</BuildingCategories>
