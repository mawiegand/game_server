<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Rules SYSTEM "rules.dtd">

<BuildingCategories>
  <BuildingCategory id="building_category_fortress_main">
    <Name>Fortification</Name>
    <Name lang="de_DE">Festungsanlagen</Name>
    <Description lang="de_DE">
      <p>Allgemeine Verbesserungen, die in Festungen gebaut werden können.</p> 
    </Description>
    <Description lang="en_US">
      <p>Improvements to be build in fortresses.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_fortress_tower">
    <Name>Towers</Name>
    <Name lang="de_DE">Türme</Name>
    <Description lang="de_DE">
      <p>In Türmen untergebrachte militärische Verbesserungen von Festungen.</p> 
    </Description>
    <Description lang="en_US">
      <p>Towers that extend the military abilities of fortresses.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_wall">
    <Name>Defensive Barricade </Name>
    <Name lang="de_DE">Verteidigungswall</Name>
    <Description lang="de_DE">
      <p>Grundlegende Verteidigungseinrichtung einer jeden Siedlung.</p> 
    </Description>
    <Description lang="en_US">
      <p>Fundamental defensive building of any settlement.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_large_buildings">
    <Name>Large Buildings</Name>
    <Name lang="de_DE">Große Gebäude</Name>
    <Description lang="de_DE">
      <p>Wichtige Gebäude, die eine große Grundfläche benötigen.</p> 
    </Description>
    <Description lang="en_US">
      <p>Advanced buildings that must be build on a large lot.</p>
    </Description>
  </BuildingCategory>
  <BuildingCategory id="building_category_small_buildings">
    <Name>Standard Buildings</Name>
    <Name lang="de_DE">Einfache Gebäude</Name>
    <Description lang="de_DE">
      <p>Grundlegende Gebäude, die überall, auf großen und kleinen Bauplätzen, gebaut werden können.</p> 
    </Description>
    <Description lang="en_US">
      <p>Fundamental buildings of any settlement that can be build on large as well as small lots.</p>
    </Description>
  </BuildingCategory>
</BuildingCategories>
