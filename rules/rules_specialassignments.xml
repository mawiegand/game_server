<SpecialAssignmentTypes>
  <SpecialAssignmentType id="special_assignment_protection1" advisor="girl" level="3" probability_factor="4">
    <Name>Gathererprotection</Name>
    <Name lang="de_DE">Sammlerschutz</Name>
    
    <Flavour lang="de_DE">Schlaue Mädchen.</Flavour>
    <Flavour lang="en_US">Clever girls.</Flavour>
  
    <ShortDescription lang="de_DE">
      <p>Schütze deine Sammler</p>
    </ShortDescription>
    <ShortDescription lang="en_US">
      <p>Protect your gatherers</p>
    </ShortDescription>
    
    <Description lang="de_DE">
      <p>Schütze Deine Sammler vor Angriffen von einem Rudel wilder Velociraptoren.</p>
    </Description>
    <Description lang="en_US">
      <p>Protect your gatherers from the attacks of a pack of fierce velociraptors.</p>
    </Description>
    
    <AssignmentTests>
      <BuildingTest building="building_gatherer" min_level="4" min_count="5" />
    </AssignmentTests>
    
    <UnitDeposit id="clubbers">0.005*PRODUCTION</UnitDeposit>
    
