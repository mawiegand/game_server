<?xml version="1.0" encoding="UTF-8"?>

<!ELEMENT Tutorial (General, Quests)>


<!-- General -->
<!ELEMENT General (Game, Version, Languages, Locales, Advisors)>

<!ELEMENT Game (#PCDATA)>
<!ATTLIST Game 
  branch CDATA #REQUIRED
  tag    CDATA #IMPLIED
>

<!ELEMENT Version EMPTY>
<!ATTLIST Version 
  major  CDATA #REQUIRED
  minor  CDATA #REQUIRED
  build  CDATA #REQUIRED
>

<!--Languages-->
<!ELEMENT Languages (Language*)>
<!ELEMENT Language (#PCDATA)>
<!ATTLIST Language
  lang ID #REQUIRED
>

<!--Locales-->
<!ELEMENT Locales (Locale*)>
<!ELEMENT Locale (#PCDATA)>
<!ATTLIST Locale
  locale ID #REQUIRED
  lang IDREF "en"
>

<!ELEMENT Advisors (Advisor*)>

<!ELEMENT Advisor (#PCDATA)>
<!ATTLIST Advisor
  id  ID #REQUIRED
>

<!-- Quests -->
<!ELEMENT Quests (Quest*)>

<!ELEMENT Quest (Name*, Task*, Description*, Flavor*, RewardText*, RewardFlavor*, Requirement?, Rewards?, RewardTests?, Message*)>
<!ATTLIST Quest
  id ID #REQUIRED
  advisor IDREF "warrior"
  hide_start_dialog CDATA "false"
  tutorial CDATA "false"
>

<!ELEMENT Requirement EMPTY>
<!ATTLIST Requirement
  quest IDREF #REQUIRED
>

<!ELEMENT Rewards (ResourceReward*, UnitReward*, ExperienceReward?)>

<!ELEMENT ResourceReward (#PCDATA)>
<!ATTLIST ResourceReward
  resource CDATA #REQUIRED
>

<!ELEMENT UnitReward (#PCDATA)>
<!ATTLIST UnitReward
  unit     CDATA #REQUIRED
>

<!ELEMENT ExperienceReward (#PCDATA)>



<!ELEMENT RewardTests ((ResourceProductionTest*, BuildingTest*, SettlementTest*, ArmyTest*, ConstructionQueueTest*, TrainingQueueTest*, MovementTest?, AllianceTest?) | TextboxTest | CustomTest)>

<!ELEMENT BuildingTest (#PCDATA)>
<!ATTLIST BuildingTest
  building  CDATA #REQUIRED
  min_level CDATA "1"
  min_count CDATA "1"
>

<!ELEMENT ResourceProductionTest (#PCDATA)>
<!ATTLIST ResourceProductionTest
  resource CDATA #REQUIRED
>


<!ELEMENT SettlementTest (#PCDATA)>
<!ATTLIST SettlementTest
  type      CDATA #REQUIRED
  min_count CDATA "1"
>

<!ELEMENT ArmyTest (#PCDATA)>
<!ATTLIST ArmyTest
  type      CDATA #REQUIRED
  min_count CDATA "1"
>

<!ELEMENT ConstructionQueueTest (#PCDATA)>
<!ATTLIST ConstructionQueueTest
  building  CDATA #REQUIRED
  min_count CDATA "1"
  min_level CDATA "1"
>

<!ELEMENT TrainingQueueTest (#PCDATA)>
<!ATTLIST TrainingQueueTest
  unit      CDATA #REQUIRED
  min_count CDATA "1"
>

<!ELEMENT MovementTest (#PCDATA)>

<!ELEMENT AllianceTest (#PCDATA)>

<!ELEMENT TextboxTest (#PCDATA)>
<!ATTLIST TextboxTest
  id        CDATA #REQUIRED
>

<!ELEMENT CustomTest (#PCDATA)>
<!ATTLIST CustomTest
  id        CDATA #REQUIRED
>

<!ELEMENT Message (Subject, Body)>
<!ATTLIST Message lang IDREF "en">
<!ELEMENT Subject (#PCDATA)>
<!ELEMENT Body (#PCDATA)>


<!--Common Leafs-->
<!ELEMENT p (#PCDATA)>

<!ELEMENT Description (p*)>
<!ATTLIST Description locale IDREF "en_US">

<!ELEMENT RewardText (#PCDATA | p)*>
<!ATTLIST RewardText locale IDREF "en_US">

<!ELEMENT RewardFlavor (#PCDATA | p)*>
<!ATTLIST RewardFlavor locale IDREF "en_US">

<!ELEMENT Name (#PCDATA)>
<!ATTLIST Name locale IDREF "en_US">

<!ELEMENT Task (#PCDATA)>
<!ATTLIST Task locale IDREF "en_US">

<!ELEMENT Flavor (#PCDATA)>
<!ATTLIST Flavor locale IDREF "en_US">


